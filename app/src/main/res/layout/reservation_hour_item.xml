<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="12:30"
        android:layout_margin="@dimen/orlik_item_default_margin"
        android:id="@+id/hour_of_day"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reserved_icon"
        android:tint="@color/reservedColor"
        android:layout_marginRight="@dimen/orlik_item_default_margin"
        android:layout_alignBottom="@+id/hour_of_day"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_done_black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/weather_rainy"
        android:layout_marginRight="@dimen/orlik_item_default_margin"
        android:id="@+id/weather_icon"
        android:layout_alignBottom="@+id/reserved_icon"
        android:layout_toLeftOf="@+id/reserved_icon"
        android:layout_toStartOf="@+id/reserved_icon" />
</RelativeLayout>