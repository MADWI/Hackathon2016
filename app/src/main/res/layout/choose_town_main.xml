<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Spinner
        android:id="@+id/choose_province"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dialog"
        android:prompt="@string/choose_province_title" />

    <Spinner
        android:id="@+id/choose_town"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/choose_town_title"
        android:spinnerMode="dialog" />

    <Spinner
        android:id="@+id/choose_orlik"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:prompt="@string/choose_orlik_title"
        android:spinnerMode="dialog" />

</LinearLayout>