<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content"
    card_view:cardElevation="@dimen/orlik_list_card_elevation"
    card_view:cardCornerRadius="@dimen/orlik_list_card_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/textDefault"
            android:text="Szczecin, ul. Wojciechowskiego 50, przy Gimnazjum nr 34"
            android:id="@+id/orlik_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/orlik_item_default_margin"
            android:layout_marginLeft="@dimen/orlik_item_default_margin"
            android:layout_marginRight="@dimen/orlik_card_name_right_margin"/>

        <ImageView
            android:id="@+id/favourite_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/orlik_name"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/orlik_name"
            android:layout_marginRight="@dimen/orlik_item_default_margin"
            android:src="@drawable/ic_favorite_black"
            android:tint="@color/grey_inactive" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ping_pong_icon"
            android:layout_marginTop="@dimen/orlik_item_default_margin"
            android:layout_marginBottom="@dimen/orlik_item_default_margin"
            android:src="@drawable/ic_ping_pong"
            android:tint="@color/grey_inactive"
            android:layout_below="@+id/favourite_icon"
            android:layout_alignLeft="@+id/favourite_icon"
            android:layout_alignStart="@+id/favourite_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volleyball_icon"
            android:tint="@color/grey_inactive"
            android:layout_marginRight="@dimen/orlik_item_default_margin"
            android:src="@drawable/ic_volley_ball"
            android:layout_alignTop="@+id/ping_pong_icon"
            android:layout_toLeftOf="@+id/ping_pong_icon"
            android:layout_toStartOf="@+id/ping_pong_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/basketball_icon"
            android:tint="@color/grey_inactive"
            android:layout_marginRight="@dimen/orlik_item_default_margin"
            android:src="@drawable/ic_basketball"
            android:layout_alignTop="@+id/volleyball_icon"
            android:layout_toLeftOf="@+id/volleyball_icon"
            android:layout_toStartOf="@+id/volleyball_icon" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/football_icon"
            android:tint="@color/grey_inactive"
            android:layout_marginRight="@dimen/orlik_item_default_margin"
            android:layout_alignBottom="@+id/basketball_icon"
            android:layout_toLeftOf="@+id/basketball_icon"
            android:layout_toStartOf="@+id/basketball_icon"
            android:src="@drawable/ic_football" />
    </RelativeLayout>
</android.support.v7.widget.CardView>